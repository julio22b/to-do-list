{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["airbnb-base", "prettier"],
    "plugins": ["prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "code": 100,
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
        "no-alert": "off",
        "no-loop-func": "off",
        "no-unused-expressions": ["error", { "allowTernary": true }],
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off"
    }
}
